<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="xzy.demo.androidtestapi.time.TimeZoneActivity">

    <TextView
            android:id="@+id/local_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地时间："/>

    <TextView
            android:id="@+id/local_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/shanghai_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海时间："/>

    <TextView
            android:id="@+id/shanghai_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tokyo_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东京时间："/>

    <TextView
            android:id="@+id/tokyo_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/network_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络时间："/>

    <TextView
            android:id="@+id/network_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/gps_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS时间："/>

    <TextView
            android:id="@+id/gps_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/diff_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本机时区和北京时区差："/>

    <TextView
            android:id="@+id/diff_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/refresh"
            android:text="刷新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="refreshTime"/>

</LinearLayout>
